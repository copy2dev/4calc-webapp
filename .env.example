# 4Calc Environment Configuration

# Application Settings
APP_NAME=4Calc
APP_VERSION=1.0.0
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Domain Settings (Update with your domain)
DOMAIN=4calc.yourdomain.com
SSL_ENABLED=true

# Security Settings
SECURITY_HEADERS=true
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Monitoring
HEALTH_CHECK_ENABLED=true
LOGGING_ENABLED=true
LOG_LEVEL=info

# Performance
GZIP_ENABLED=true
CACHE_STATIC_ASSETS=true
CACHE_MAX_AGE=31536000

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# CDN Settings (Optional)
CDN_ENABLED=false
CDN_URL=

